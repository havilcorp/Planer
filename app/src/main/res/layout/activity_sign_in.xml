<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sign_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/signIn_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_sign_inputs"
            android:padding="10dp"
            android:hint="Введите email"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/signIn_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_sign_inputs"
            android:padding="10dp"
            android:hint="Введите пароль"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/signIn_actionSignIn"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_sign_button"
            android:textColor="#5A6C82"
            android:text="Войти"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textColor="@color/sign_text_color"
            android:text="Забыли пароль?"/>

        <TextView
            android:id="@+id/signIn_actionSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/sign_text_color"
            android:textAlignment="center"
            android:text="У вас еще нет аккаунта? \t\nНажмите что бы зарегистрироваться"/>

    </LinearLayout>

    <include android:id="@+id/progress" layout="@layout/progress_bar"/>

</RelativeLayout>